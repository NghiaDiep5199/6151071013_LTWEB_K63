@model WEB_QLBANSACH_TH.Models.SACH

@{
    ViewBag.Title = "ThemmoiSach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm mới sách</h1>

@using (Html.BeginForm("Themsachmoi", "Admin", FormMethod.Post, new {@enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <form class="needs-validation" novalidate>
            <div class="form-group">
                @Html.LabelFor(model => model.Masach, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Masach, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Masach, "", new { @class = "text-danger small" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Tensach, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Tensach, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tensach, "", new { @class = "text-danger small" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Giaban, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Giaban, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Giaban, "", new { @class = "text-danger small" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Mota, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger small" })
            </div>

            <div class="form-group">
                <div class="form-group">
                    @Html.LabelFor(model => model.Anhbia, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" name="fileupload" />
                        @ViewBag.Thongbao
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Ngaycapnhat, htmlAttributes: new { @class = "form-label" })
                <div class="col-md-10">
                    <input type="date" name="Ngaycapnhat" />
                    @Html.ValidationMessageFor(model => model.Ngaycapnhat)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Soluongton, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Soluongton, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Soluongton, "", new { @class = "text-danger small" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaCD, htmlAttributes: new { @class = "form-label" })
                @Html.DropDownList("MaCD", null, htmlAttributes: new { @class = "form-select" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaNXB, htmlAttributes: new { @class = "form-label" })
                @Html.DropDownList("MaNXB", null, htmlAttributes: new { @class = "form-select" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="THÊM MỚI" class="btn btn-default" />
                </div>
            </div>
            @*<div class="form-actions">
                <button type="submit" class="btn btn-primary">Thêm</button>
                <button type="reset" class="btn btn-secondary">Hủy</button>
            </div>*@
        </form>
    </div>

}

<style>
    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
    }

    h4 {
        color: #333;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    .form-control, .form-select {
        width: 580px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        transition: border-color 0.3s;
    }

        .form-control:focus, .form-select:focus {
            border-color: #007bff;
            outline: none;
        }

    .text-danger {
        color: red;
    }

    .form-actions {
        display: flex;
        justify-content: flex-end;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        margin-left: 10px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

<div>
    @Html.ActionLink("Về trang quản lý sách", "Sach")
</div>
